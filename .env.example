# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=BoardRoom
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# DATABASE (MySQL)
# =============================================================================
DATABASE_URL=mysql+pymysql://boardroom:boardroom@localhost:3306/boardroom
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# VECTOR DATABASE (Milvus)
# =============================================================================
MILVUS_HOST=localhost
MILVUS_PORT=19530

# =============================================================================
# OBJECT STORAGE (S3-Compatible)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_SNAPSHOTS=boardroom-snapshots
S3_BUCKET_ARTIFACTS=boardroom-artifacts

# =============================================================================
# MESSAGE QUEUE (Kafka)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Alternative: Azure OpenAI
# LLM_PROVIDER=azure
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# =============================================================================
# AUTHENTICATION (OIDC/OAuth2)
# =============================================================================
OIDC_ISSUER_URL=https://your-identity-provider.com
OIDC_CLIENT_ID=boardroom-client
OIDC_CLIENT_SECRET=your-client-secret
JWT_ALGORITHM=RS256
JWT_EXPIRY_MINUTES=60

# =============================================================================
# MULTI-TENANCY
# =============================================================================
DEFAULT_TENANT_PLAN=smb
TENANT_ISOLATION_LEVEL=database  # database | schema | row

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_MAX_ROUNDS=3
AGENT_ROUND_TIMEOUT_SECONDS=60
AGENT_QUORUM_PERCENTAGE=60
CEO_MODE=hybrid  # ai | human | hybrid

# =============================================================================
# EXECUTION POLICY
# =============================================================================
DEFAULT_EXECUTION_MODE=read_only
LOW_RISK_AUTO_EXECUTE=true
ROLLBACK_WINDOW_MINUTES=60

# =============================================================================
# AUDIT & COMPLIANCE
# =============================================================================
AUDIT_RETENTION_DAYS=2555  # 7 years
AUDIT_HASH_ALGORITHM=sha256
PDF_SIGNING_ENABLED=true
PDF_SIGNING_CERTIFICATE_PATH=/etc/ssl/certs/signing.pem

# =============================================================================
# OBSERVABILITY
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# ERP CONNECTORS
# =============================================================================
# Tally
TALLY_SERVER_URL=http://localhost:9000
TALLY_COMPANY_NAME=Your Company

# Zoho Books
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_ORGANIZATION_ID=your-org-id

# =============================================================================
# SERVICES PORTS
# =============================================================================
AGENT_SERVICE_PORT=8001
ORCHESTRATOR_SERVICE_PORT=8002
CONNECTOR_SERVICE_PORT=8003
AUDIT_SERVICE_PORT=8004
AUTH_SERVICE_PORT=8005
ADMIN_SERVICE_PORT=8006
BILLING_SERVICE_PORT=8007
PDF_SERVICE_PORT=8008
FRONTEND_PORT=3000
